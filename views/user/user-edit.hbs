<h2>Edit Profile</h2>

<form action="/myprofile/edit" method="post" enctype="multipart/form-data">
  <input type="hidden" name="id" value="{{ user._id }}">
  
  <!-- Mostrar la imagen actual -->
  {{#if user.userImage}}
    <img src="{{ user.userImage }}" alt="Current Profile Image" width="50" height="50">
  {{else}}
    <img src="/images/guest.webp" alt="Default Profile Image" width="100" height="100">
  {{/if}}

  <label for="username">Username:</label>
  <input type="text" id="username" name="username" value="{{ user.username }}" required>

  <label for="profileImage">Image of Profile:</label>
  <input type="file" class="form-control-file" id="profileImage" name="profileImage">
                    
  <button type="submit">Save Changes</button>
</form>

<a href="/myprofile">Cancel</a>



