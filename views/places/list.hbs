
<style>
  ul {
    list-style-type: none;
    display: flex;
    flex-wrap: wrap;
    gap: 20px; 
  }

  li {
    text-align: center;
  }

  li a {
    text-decoration: none;
    color: inherit;
  }

  img {
    width: 100%;
    height: 150px; 
    object-fit: cover; 
  }

  div {
    padding: 10px;
    background-color: #f0f6f1; 
    color: #090909; 
    border-radius: 5px; 
    transition: background-color 0.3s, color 0.3s; 
  }

  div:hover {
    background-color: #080808; 
    color: #fff; 
  }
</style>

<h2 id="list">Places </h2>


<ul>
  {{#each places}}
    <li>
      <a href="/places/{{_id}}">
        <img src="{{ image }}" alt="{{ title }}">
        <div>{{ title }}</div>
      </a>
    </li>
  {{/each}}
</ul>
